{
    "outputDirectory": "client/dist",
    "rewrites": [
        {
            "source": "/api/debug",
            "destination": "/api/debug.ts"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api/index.ts"
        },
        {
            "source": "/((?!api/).*)",
            "destination": "/index.html"
        }
    ]
}